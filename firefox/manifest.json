{

  "description": "Analyzes sentiment of comments on github pull requests",
  "manifest_version": 2,
  "name": "PRS-A - Pull Request Sentiment Analyzer",
  "version": "1.2",
  "homepage_url": "https://github.com/olore/prs-a",
  "icons": {
    "48": "brain.png"
  },
  "permissions": [
    "*://developer.mozilla.org/*",
    "activeTab",
    "storage",
    "tabs",
    "webRequest"
  ],
  "background": {
    "scripts": [
      "background-worker.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.github.com/*/pull/*",
        "*://*.bitbucket.org/*/pull-requests/*"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "page_action": {
    "default_title": "PRS-A - Pull Request Sentiment Analyzer",
    "default_icon": {
      "16": "brain.png",
      "32": "brain.png"
    },
    "show_matches": [
      "*://*.github.com/*/pull/*",
      "*://*.bitbucket.org/*/pull-requests/*"
    ]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true
  }

}